<div class="container">
  <div class="banner" style="background-image: <% image_tag "background_image_home.jpg" %>">
    <div class="banner-content">
      <h1>Poemic Club</h1>
      <% unless user_signed_in? %>
        <p>Sign up to receive a poem every day</p>
        <div class="banner-form">
          <%= render 'layouts/homesignup' %>
        </div>
      <% else %>
        <p>We hope you are enjoying your poems</p>
      <% end %>
    </div>
  </div>
</div>
